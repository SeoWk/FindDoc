<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/mypage_toolbar"
            android:background="?android:attr/windowBackground"
            >
            <TextView
                android:id="@+id/mypage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypage_title"
                android:layout_gravity="center"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="15dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/kakao_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/kakao_button_shape"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:text="@string/kakao_login"
                    android:drawableStart="@drawable/ic_speech_bubble_24"
                    />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <TextView
                android:id="@+id/hpTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/hpTV"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <TextView
                android:id="@+id/categoryTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/categoryTV1"
                android:textColor="#C9C9C9"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/faq_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notice_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inquire_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inquire_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <TextView
                android:id="@+id/categoryTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/categoryTV2"
                android:textColor="#C9C9C9"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/terms_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/invite_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invite_button"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/ic_greater"
                android:background="@android:color/transparent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/version_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_button"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:background="@android:color/transparent"
                    />
                <TextView
                    android:id="@+id/versionTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/versionTV"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>