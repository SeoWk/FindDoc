<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/hospitalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="기관명(1차)"
        style="@style/RVTextViewBold"
        />
    <TextView
        android:id="@+id/departmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="분류/진료과목"
        android:textColor="@color/gray"
        android:layout_below="@id/hospitalTV"
        android:layout_marginTop="10dp"
        style="@style/RVTextView"
        />

    <TextView
        android:id="@+id/treatmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="진료여부(1차)"
        android:textColor="@color/red"
        android:layout_below="@+id/departmentTV"
        android:layout_marginTop="10dp"
        style="@style/RVTextView"
        />

    <TextView
        android:id="@+id/hoursTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/departmentTV"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/treatmentTV"
        android:layout_alignBaseline="@id/treatmentTV"
        tools:text="진료시간(1차)"
        style="@style/RVTextView"
        />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="거리(1차)"
        android:gravity="center"
        android:layout_below="@id/hoursTV"
        android:layout_marginTop="10dp"
        style="@style/RVTextView"
        app:drawableLeftCompat="@drawable/ic_marker_black" />
    <TextView
        android:id="@+id/dongTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="주소(1차)"
        android:layout_toRightOf="@id/distanceTV"
        android:layout_below="@id/hoursTV"
        android:layout_alignBaseline="@id/distanceTV"
        android:layout_marginLeft="10dp"
        style="@style/RVTextView"
        />
    <TextView
        android:id="@+id/telTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="전화번호(1차)"
        android:layout_below="@id/dongTV"
        android:layout_marginTop="10dp"
        app:drawableLeftCompat="@drawable/baseline_call_24"
        style="@style/RVTextView"
        />

    <LinearLayout
        android:id="@+id/features_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/telTV"
        android:layout_marginTop="10dp"
        style="@style/RVTextView"
        >
        <TextView
            android:id="@+id/hopitalInfoTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="비고(1차)"
            style="@style/RVTextView"
            />
