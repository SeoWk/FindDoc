    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- include bottom sheet -->
    <include layout="@layout/bottom_sheet_layout"/>
    <include layout="@layout/bottom_hospital_item_detail"
        android:visibility="gone"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="지도보기"
        android:drawableLeft="@drawable/ic_marker_black"
        app:backgroundTint="@android:color/white"
        android:text="@string/fab_map"
        android:textSize="12sp"
        android:visibility="visible"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/main_constraint"
        app:layout_anchorGravity="right|bottom"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="목록보기"
        android:drawableLeft="@drawable/ic_list"
        app:backgroundTint="@android:color/white"
        android:text="@string/fab_list"
        android:textSize="12sp"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/main_constraint"
        app:layout_anchorGravity="right|bottom"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>