<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindDoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <!-- statusBarColor-->
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <!--fab텍스트,-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/black</item>
        <!--chips-->
        <item name="colorSurface">@android:color/white</item>
        <!--navigationbBar텍스트,-->
        <item name="colorOnSurface">@color/gray</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="chipStyle">@style/Widget.FindDoc.ChoiceChip</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/dnf_bitbit</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">2dp</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">10dp</item>
        <item name="android:background">@drawable/filter_style</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>
<!--    <style name="EditTextStyle" >
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>-->

    <style name="EditTextWrapper" parent="Widget.Design.TextInputLayout" >
        <item name="colorControlNormal">@android:color/white</item><!--unFocus 밑줄-->
        <item name="colorControlActivated">@android:color/white</item><!--Focus 밑줄-->
        <item name="android:textColorHint">@color/white_night</item><!--hint color-->
        <item name="hintTextColor">@null</item> <!--floating hint color-->
        <item name="hintEnabled">false</item> <!--floating hint color-->
    </style>
    <style name="CustomEditText" >
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start|center</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@null</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:editTextColor">@color/black</item> <!-- text color -->
        <item name="android:textColorHighlight">@null</item> <!-- selected text color -->
        <item name="android:textColorHint">@color/white_night</item>   <!-- hint color -->
    </style>
    <style name="RVTextView" parent="Widget.AppCompat.TextView" >
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVTextViewBold" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--BottomSheetDialog Custom-->
    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
    <!--Choice Chip Custom-->
    <style name="Widget.FindDoc.ChoiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/recommendation_chip_state_list</item>
        <item name="android:textColor">@color/recommendation_chip_text_state_list</item>
    </style>
    <!--Filter Chip Custom-->
    <style name="Widget.FindDoc.FilterChip.Menu" parent="Widget.FindDoc.FilterChip">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="chipBackgroundColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:checkable">false</item>
        <item name="closeIcon">@drawable/baseline_arrow_drop_down_24</item>
        <item name="closeIconVisible">true</item>
        <item name="elevation">2dp</item>
    </style>
    <style name="Widget.FindDoc.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/filter_chip_state_list</item>
        <item name="android:textColor">@color/filter_chip_text_state_list</item>
        <item name="checkedIconVisible">false</item>
        <item name="elevation">2dp</item>
    </style>
    <style name="Widget.FindDoc.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textSize">12sp</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="elevation">2dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>
    <style name="Theme.FindDoc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FindDoc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FindDoc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>